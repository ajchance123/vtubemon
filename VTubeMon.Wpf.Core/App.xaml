<Application 
    x:Class="VTubeMon.Wpf.Core.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VTubeMon.Wpf.Core"
    xmlns:ioc="clr-namespace:VTubeMon.Wpf.Core.IOC"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ioc:ViewModelLocator
                x:Key="Locator"
                Container="{Binding Container, Source={x:Static Application.Current}}" />
            <ResourceDictionary.MergedDictionaries>
                <local:SkinResourceDictionary
                ContrastSource="Themes/ContrastMode.xaml"
                DarkSource="Themes/DarkMode.xaml"
                LightSource="Themes/LightMode.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
